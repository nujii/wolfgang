{sys, [
       {lib_dirs, ["../apps/", "../deps/"]},
       {rel, "wolfgang", "1",
        [
         kernel,
         stdlib,
         sasl,
         wolfgang
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "wolfgang"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, sasl, [{incl_cond, include}]},
       {app, wolfgang, [{incl_cond, include}]}
      ]}.

{target_dir, "wolfgang"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "data/ring"},
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {template, "files/app.config", "etc/app.config"},
           {template, "files/vm.args", "etc/vm.args"},
           {template, "files/wolfgang", "bin/wolfgang"},
           {template, "files/wolfgang-admin", "bin/wolfgang-admin"}
           ]}.
